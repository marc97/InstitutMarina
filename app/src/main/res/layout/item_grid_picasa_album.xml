<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@color/photo_placeholder_grey"
        android:id="@+id/imv_picasa_album" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <cat.institutmarina.insmarina.ui.widget.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:id="@+id/txv_albums_album_name"
            android:layout_gravity="left|top"
            android:text="Viatje a Turquia"
            app:typeface="@string/font_bold"
            android:textColor="@color/text_color_primary"
            android:textSize="16sp"
            android:maxLines="1"
            android:singleLine="true"/>

        <cat.institutmarina.insmarina.ui.widget.TypefacedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:id="@+id/txv_albums_album_photos_number"
            android:layout_gravity="left|bottom"
            android:text="67 Fotos"
            app:typeface="@string/font_normal"
            android:textColor="@color/text_color_primary"
            android:textSize="14sp"/>
    </FrameLayout>
</LinearLayout>