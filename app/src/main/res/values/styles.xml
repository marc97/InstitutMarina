<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/toolbar_color</item>
        <item name="colorControlNormal">@color/accent_color_blue</item>
        <item name="colorPrimaryDark">@color/toolbar_color</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/ActivitiesTransition</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--
    <style name="Toolbar.White" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="android:textColorPrimary">@style/Toolbar.White.TextAppearance</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
      </style>
        -->
      <style name="Toolbar.White.TextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
          <item name="android:textSize">18sp</item>
      </style>

      <style name="ActivitiesTransition" parent="@android:style/Animation.Activity">
          <item name="android:activityOpenEnterAnimation">@anim/activities_transition_in</item>
          <!--<item name="android:activityOpenExitAnimation">@anim/activities_transition_out</item>-->

        <!--<item name="android:activityCloseEnterAnimation">@anim/activities_transition_in_back</item>-->
        <item name="android:activityCloseExitAnimation">@anim/activities_transition_out_back</item>
    </style>

    <style name="PrimaryText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>